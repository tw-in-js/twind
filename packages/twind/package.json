{
  "name": "twind",
  "version": "1.0.0-next.38",
  "description": "The core engine without any presets.",
  "publishConfig": {
    "tag": "next",
    "access": "public",
    "directory": "dist"
  },
  "keywords": [
    "twind",
    "tailwind",
    "tailwindcss",
    "tw-in-js",
    "tailwind-in-js"
  ],
  "type": "module",
  "// The 'module', 'unpkg' and 'types' fields are added by distilt": "",
  "main": "src/index.ts",
  "// Each entry is expanded into several bundles (module, script, types, require, node, and default)": "",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "// These are relative from within the dist/ folder": "",
  "sideEffects": false,
  "size-limit": [
    {
      "name": "twind",
      "path": "dist/twind.esnext.js",
      "brotli": true,
      "limit": "7.7kb"
    },
    {
      "name": "twind (setup)",
      "path": "dist/twind.esnext.js",
      "import": "{ setup }",
      "brotli": true,
      "limit": "5.25kb"
    },
    {
      "name": "twind (twind + cssom)",
      "path": "dist/twind.esnext.js",
      "import": "{ twind, cssom }",
      "brotli": true,
      "limit": "4.6kb"
    }
  ],
  "dependencies": {
    "csstype": "^3.0.10"
  },
  "peerDependencies": {
    "typescript": "^4.8.4"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@twind/preset-tailwind": "1.0.0-next.38"
  },
  "scripts": {
    "build": "distilt"
  }
}
