{
  "name": "twind",
  "version": "1.0.0-next.6",
  "description": "tailwindcss compat based on twind",
  "publishConfig": {
    "tag": "next",
    "access": "public",
    "directory": "dist"
  },
  "keywords": [
    "twind",
    "tailwind",
    "tailwindcss",
    "tw-in-js",
    "tailwind-in-js"
  ],
  "homepage": "https://twind.dev",
  "bugs": "https://github.com/tw-in-js/twind/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/tw-in-js/twind.git",
    "directory": "packages/twind"
  },
  "license": "MIT",
  "contributors": [
    "Luke Jackson (lukejacksonn.github.io)",
    "Sascha Tandel (https://github.com/sastan)"
  ],
  "engines": {
    "node": ">=12.4"
  },
  "type": "module",
  "// The 'module', 'unpkg' and 'types' fields are added by distilt": "",
  "main": "src/index.ts",
  "// Each entry is expanded into several bundles (module, script, types, require, node, and default)": "",
  "exports": {
    ".": "./src/index.ts",
    "./core": "./src/core.ts",
    "./mini": "./src/mini.ts",
    "./package.json": "./package.json"
  },
  "// These are relative from within the dist/ folder": "",
  "sideEffects": false,
  "size-limit": [
    {
      "name": "twind",
      "path": "dist/twind.esnext.js",
      "brotli": true,
      "limit": "15kb"
    },
    {
      "name": "twind (only setup)",
      "path": "dist/twind.esnext.js",
      "import": "{ setup }",
      "brotli": true,
      "limit": "14.5kb"
    },
    {
      "name": "twind/core",
      "path": "dist/core.esnext.js",
      "brotli": true,
      "limit": "5.5kb"
    },
    {
      "name": "twind/core (only setup)",
      "path": "dist/core.esnext.js",
      "import": "{ setup }",
      "brotli": true,
      "limit": "4.2kb"
    },
    {
      "name": "twind/mini",
      "path": "dist/mini.esnext.js",
      "brotli": true,
      "limit": "6.5kb"
    },
    {
      "name": "twind/mini (only setup)",
      "path": "dist/mini.esnext.js",
      "import": "{ setup }",
      "brotli": true,
      "limit": "5.2kb"
    }
  ],
  "// These are ONLY bundled (eg included) in the global builds": "",
  "bundledDependencies": [
    "@twind/core",
    "@twind/runtime",
    "@twind/preset-autoprefix",
    "@twind/preset-mini",
    "@twind/preset-tailwind"
  ],
  "dependencies": {
    "@twind/core": "workspace:1.0.0-next.5",
    "@twind/preset-autoprefix": "workspace:1.0.0-next.5",
    "@twind/preset-mini": "workspace:1.0.0-next.5",
    "@twind/preset-tailwind": "workspace:1.0.0-next.5",
    "@twind/runtime": "workspace:1.0.0-next.5"
  },
  "peerDependencies": {
    "typescript": "^4.4.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "scripts": {
    "build": "distilt",
    "prepublishOnly": "npm run build"
  }
}
